<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" 
                  arguments=".\CollaborativePresentation.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="outofprocess"
                  disableStartUpErrorPage="true">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_FORWARDEDHEADERS_ENABLED" value="true" />
        </environmentVariables>
        <handlerSettings>
          <handlerSetting name="debugLevel" value="file" />
          <handlerSetting name="debugFile" value=".\logs\aspnetcore-debug.log" />
        </handlerSettings>
      </aspNetCore>
      <!-- Increase request timeout and other performance settings -->
      <serverRuntime uploadReadAheadSize="8388608" />
    </system.webServer>
  </location>
</configuration>
